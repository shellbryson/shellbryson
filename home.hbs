{{!< default}}

<div class="lane">
  <div>
    {{#get "pages" filter="tag:hash-home-intro" include="tags,authors" as |page|}}
      {{#page}}
      <div class="panel panel--masthead">
        <h1 class="reveal reveal--delay-1">{{title}}</h1>
        {{content}}
        {{#if feature_image}}
        <div>
          <img src="{{img_url feature_image}}" alt="{{title}}" class="feature-image" />
        </div>
        {{/if}}
      </div>
      {{/page}}
    {{/get}}
  </div>
</div>

<div class="lane">
  <div class="split">

    <div class="code reveal reveal--delay-2">
      {{#get "pages" filter="tag:hash-home-code" include="tags,authors" as |page|}}
      {{#page}}
      <div class="panel">
        <h2>{{title}}</h2>
        {{content}}
        {{#if feature_image}}
        <div>
          <img src="{{img_url feature_image}}" alt="{{title}}" class="feature-image" />
        </div>
        {{/if}}
      </div>
      {{/page}}
      {{/get}}

      <div class="panel">
        <h3>Projects</h3>
        <div class="grid">
          {{#get "pages" filter="tag:project" limit="9" include="tags,authors" as |page|}}
          {{#page}}
          {{> card-project}}
          {{/page}}
          {{/get}}
        </div>
        <div class="panel__more">
          <a href="/projects">More projects...</a>
        </div>
      </div>

      <div class="panel">
        <h3>Posts</h3>
        <div class="grid">
          {{#get "posts" filter="tag:code" limit="9" include="tags,authors" as |post|}}
          {{#post}}
          {{> card-code}}
          {{/post}}
          {{/get}}
        </div>
        <div class="panel__more">
          <a href="/code" class="panel__more">More posts...</a>
        </div>
      </div>
    </div>

    <div class="write reveal reveal--delay-3">
      {{#get "pages" filter="tag:hash-home-write" include="tags,authors" as |page|}}
      {{#page}}
      <div class="panel">
        <h2>{{title}}</h2>
        {{content}}
        {{#if feature_image}}
        <div>
          <img src="{{img_url feature_image}}" alt="{{title}}" class="feature-image" />
        </div>
        {{/if}}
      </div>
      {{/page}}
      {{/get}}

      <div class="panel">
        <h2>Posts</h2>
        <div class="grid">
          {{#get "posts" filter="tag:write" limit="9" include="tags,authors" as |post|}}
          {{#post}}
          {{> card-write}}
          {{/post}}
          {{/get}}
        </div>
        <div class="panel__more">
          <a href="/writing" class="panel__more">More posts...</a>
        </div>
      </div>
    </div>

  </div>
</div>
