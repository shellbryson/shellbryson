{
  "name": "shellbryson",
  "description": "Shell Bryson Ghost Theme",
  "demo": "https://shellbryson.com",
  "version": "0.1.3",
  "engines": {
    "ghost": ">=3.0.0",
    "ghost-api": "v2"
  },
  "screenshots": {
    "desktop": "assets/screenshot-desktop.jpg"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Magazine"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "scripts": {
    "dev": "gulp",
    "zip": "gulp zip",
    "test": "gscan .",
    "pretest": "gulp build",
    "preship": "yarn test",
    "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
  },
  "author": {
    "name": "Shell Bryson",
    "email": "shell@shellbryson.com",
    "url": "https://shellbryson.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shellbryson/shellbryson"
  },
  "devDependencies": {
    "autoprefixer": "^9.6",
    "cssnano": "4.1.10",
    "gscan": "^3.0.1",
    "gulp": "^4.0.2",
    "gulp-livereload": "4.0.1",
    "gulp-postcss": "8.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "2.6.5",
    "gulp-uglify-es": "^1.0.4",
    "gulp-util": "3.0.8",
    "gulp-watch": "5.0.1",
    "gulp-zip": "4.2.0",
    "postcss-color-function": "4.0.1",
    "postcss-custom-properties": "8.0.9",
    "postcss-easy-import": "3.0.0"
  },
  "browserslist": [
    "> 1%",
    "ie >= 8",
    "edge >= 15",
    "ie_mob >= 10",
    "ff >= 45",
    "chrome >= 45",
    "safari >= 7",
    "opera >= 23",
    "ios >= 7",
    "android >= 4",
    "bb >= 10"
  ],
  "config": {
    "posts_per_page": 15,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1200
      },
      "xl": {
        "width": 2000
      }
    }
  },
  "dependencies": {
    "hamburgers": "^1.1.3"
  }
}
